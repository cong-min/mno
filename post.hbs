{{!< default}}

{{#post}}

  <article class="post-container post-container--single">

    <header class="post-header">
      <div class="post-meta">
      <time datetime="{{date format="YYYY年MM月DD日"}}" class="post-meta__date date">{{date format="YYYY年MM月DD日"}}</time> {{#if tags}}&#8226;{{/if}} <span class="post-meta__tags tags">{{tags}}</span>
      </div>
      <h1 class="post-title">{{{title}}}</h1>
    </header>

    <section class="{{post_class}}">
      {{content}}
    </section>

  </article>
  
  {{> read-more}}
  {{> comments}}

{{/post}}
